<Window x:Class="HospitalManagment.WindowWPF"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HospitalManagment"
        mc:Ignorable="d"
        Title="WindowWPF" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name ="gridDoctors" HorizontalAlignment="Left" Height="100" VerticalAlignment="Top" Width="784" Margin="10,310,-0.4,0"/>
        <Label Content="Name:" HorizontalAlignment="Left" Margin="10,37,0,0" VerticalAlignment="Top" Height="28" Width="47"/>
        <TextBox x:Name ="txtName" HorizontalAlignment="Left" Height="23" Margin="99,37,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" RenderTransformOrigin="-3.442,-4.57"/>
        <Label Content="Specialization:" HorizontalAlignment="Left" Margin="10,65,0,0" VerticalAlignment="Top" Height="28" Width="84"/>
        <TextBox x:Name ="txtSpecialization" HorizontalAlignment="Left" Height="23" Margin="99,65,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" RenderTransformOrigin="-3.442,-4.57"/>
        <Label Content="Qualification:" HorizontalAlignment="Left" Margin="10,89,0,0" VerticalAlignment="Top" Height="28" Width="84"/>
        <TextBox x:Name ="txtQualification" HorizontalAlignment="Left" Height="23" Margin="99,93,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" RenderTransformOrigin="-3.442,-4.57"/>
        <Label Content="Gender:" HorizontalAlignment="Left" Margin="10,117,0,0" VerticalAlignment="Top" Height="28" Width="84"/>
        <TextBox x:Name ="txtGender" HorizontalAlignment="Left" Height="23" Margin="99,121,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" RenderTransformOrigin="-3.442,-4.57"/>
        <Button HorizontalAlignment="Left" Margin="144,156,0,0" VerticalAlignment="Top" Width="75">
            <Button x:Name="btnAdd" Content="Add" Height="21" Width="75" Click="BtnAdd_Click"/>
        </Button>
        <Button HorizontalAlignment="Left" Margin="19,279,0,0" VerticalAlignment="Top" Width="75">
            <Button x:Name ="btnLoadDoctors" Content="Load Doctors" Height="20" Width="73" Click="BtnLoadDoctors_Click"/>
        </Button>
        <Button x:Name="btnUpdateDoctors" Content="Update Doctors" HorizontalAlignment="Left" Margin="698,283,0,0" VerticalAlignment="Top" Width="75" Click="BtnUpdateDoctors_Click"/>

    </Grid>
</Window>
